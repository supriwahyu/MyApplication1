<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="My Calculator"
        android:textSize="20dp"
        android:textColor="#f32"
        android:gravity="center"
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <EditText
        android:id="@+id/edit1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter First Number"
        app:layout_constraintTop_toBottomOf="@+id/txt"
        />

    <EditText
        android:id="@+id/edit2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please Enter Second Number"
        app:layout_constraintTop_toBottomOf="@+id/edit1"
        />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="add"
            android:layout_margin="10dp"
            app:layout_constraintTop_toBottomOf="@+id/edit2"
            />

    <Button
        android:id="@+id/btnSubtract"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subtract"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/edit2"
        />

    <Button
        android:id="@+id/btnDevide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Devide"
        android:layout_margin="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        />

    <Button
        android:id="@+id/btnMultiply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Multyply"
        android:layout_margin="10dp"
        app:layout_constraintLeft_toRightOf="@+id/btnDevide"
        app:layout_constraintTop_toBottomOf="@+id/btnAdd"
        />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Result"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="30dp"
        android:textColor="#f32"
        android:layout_margin="10dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>